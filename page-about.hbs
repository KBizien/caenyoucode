{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}
<main class="content page-about page-full wrapper-posts-desktop" role="main">
    <article class="{{post_class}} inner">
    {{! Everything inside the #post tags pulls data from the post }}
    {{#post}}

        <h4 class="post-title">Caen you code ? Qu'est ce que c'est que ce truc ?</h4>

        <section class="post-content about-content">
            {{content}}
        </section>

    {{/post}}
    </article>

</main>
