{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <section class="post-meta">
        <div class="tag {{tags autolink="false"}}">
            <span class="tag__name">{{tags separator=" - "}}</span>
        </div>
        <div class="author inner">
            <div class="author-thumb">
                {{#if author.image}}<img class="author-thumb__img" src="{{author.image}}" alt="Author image" />{{/if}}
            </div>
            <div class="author-details">
                <p class="author-details__name">{{author.name}}</p>
                <p class="author-details__description">{{author.bio}}</p>
            </div>
        </div>
    </section>
    <header class="post-header inner">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <div class="date inner">
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> 
    </div>
    <section class="post-excerpt inner">
        <p>{{excerpt words="30"}} <a class="read-more" href="{{url}}">&raquo; Read More</a></p>
    </section>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
<div class="pagination inner">
    {{pagination}}
</div>